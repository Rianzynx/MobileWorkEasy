<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título da Solicitação"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Aberto"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <!-- Data -->
        <TextView
            android:id="@+id/textData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data: 01/10/2025"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <!-- Prioridade -->
        <TextView
            android:id="@+id/textPrioridade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prioridade: Alta"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginBottom="24dp" />

        <!-- Descrição / detalhes extras -->
        <TextView
            android:id="@+id/textDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição detalhada da solicitação..."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <!-- Seção de anexos -->
        <TextView
            android:id="@+id/textAnexosLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anexos:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAnexos"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Botão de ação -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFechar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:backgroundTint="@color/cian"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>
